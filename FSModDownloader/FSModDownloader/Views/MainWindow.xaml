<Window x:Class="FSModDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FS Mod Downloader" Height="800" Width="1200"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/icon.ico">
    <DockPanel>
        <!-- Top Menu Bar -->
        <StackPanel DockPanel.Dock="Top" Background="#FFFFFF" Height="50" Orientation="Horizontal" Margin="0,0,0,1">
            <TextBlock Text="FS Mod Downloader" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="20,0,0,0" Foreground="#333333"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="Settings" Width="80" Height="35" Margin="0,0,10,0" Background="#007ACC" Foreground="White" Cursor="Hand"/>
                <Button Content="About" Width="80" Height="35" Background="#007ACC" Foreground="White" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <StackPanel Grid.Column="0" Background="#FFFFFF" Margin="0,0,1,0">
                <TextBlock Text="Game" FontSize="14" FontWeight="Bold" Margin="15,15,15,10" Foreground="#333333"/>
                <ComboBox x:Name="GameInstanceCombo" Margin="15,0,15,15" Height="35" VerticalContentAlignment="Center"/>
                
                <TextBlock Text="Categories" FontSize="14" FontWeight="Bold" Margin="15,10,15,10" Foreground="#333333"/>
                <ListBox x:Name="CategoriesList" Margin="15,0,15,15" Height="150">
                    <ListBoxItem>All Mods</ListBoxItem>
                    <ListBoxItem>Vehicles</ListBoxItem>
                    <ListBoxItem>Maps</ListBoxItem>
                    <ListBoxItem>Equipment</ListBoxItem>
                    <ListBoxItem>Placeable Objects</ListBoxItem>
                    <ListBoxItem>Other</ListBoxItem>
                </ListBox>

                <TextBlock Text="Installed Mods" FontSize="14" FontWeight="Bold" Margin="15,10,15,10" Foreground="#333333"/>
                <ListBox x:Name="InstalledModsList" Margin="15,0,15,15" Height="200"/>

                <Button Content="Refresh" Width="220" Height="35" Margin="15,0,15,15" Background="#28A745" Foreground="White" Cursor="Hand"/>
            </StackPanel>

            <!-- Right Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <StackPanel Grid.Row="0" Background="#FFFFFF" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,10,20,10">
                    <TextBox x:Name="SearchBox" Width="300" Height="40" VerticalContentAlignment="Center" Padding="10,0,10,0" 
                             Foreground="#666666" Background="#F0F0F0" BorderThickness="0"/>
                    <Button Content="Search" Width="100" Height="40" Margin="10,0,0,0" Background="#007ACC" Foreground="White" Cursor="Hand"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Sort By:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="150" Height="35" VerticalContentAlignment="Center">
                            <ComboBoxItem>Most Downloaded</ComboBoxItem>
                            <ComboBoxItem>Recently Updated</ComboBoxItem>
                            <ComboBoxItem>Alphabetical</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Mods Grid -->
                <DataGrid Grid.Row="1" x:Name="ModsDataGrid" Margin="20,10,20,20" AutoGenerateColumns="False" 
                         Background="#FFFFFF" BorderThickness="0" AlternatingRowBackground="#FAFAFA">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding IsInstalled}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Install" Width="70" Height="30" Margin="0,0,5,0" Background="#007ACC" Foreground="White" Cursor="Hand"/>
                                        <Button Content="Info" Width="70" Height="30" Background="#6C757D" Foreground="White" Cursor="Hand"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#FFFFFF" Height="30">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#666666"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="ProgressBar" Width="200" Height="20" Visibility="Hidden"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
