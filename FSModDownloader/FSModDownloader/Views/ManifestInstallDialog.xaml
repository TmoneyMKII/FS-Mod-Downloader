<Window x:Class="FSModDownloader.Views.ManifestInstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install Modlist" Height="500" Width="600"
        Background="#1A1A1A"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Modern Button Style (Green) -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27AE60"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E8449"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555555"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#2ECC71"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                            <Border x:Name="PART_Track"/>
                            <Border x:Name="PART_Indicator" HorizontalAlignment="Left" CornerRadius="4" Background="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="ManifestNameText" Text="Modlist Name" FontSize="22" FontWeight="Bold" Foreground="#2ECC71"/>
            <TextBlock x:Name="ManifestInfoText" Text="0 mods • FS25" Foreground="#888888" FontSize="13" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Overall Progress -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Grid Margin="0,0,0,8">
                <TextBlock x:Name="OverallProgressText" Text="Ready to install" Foreground="#E0E0E0" FontSize="14"/>
                <TextBlock x:Name="OverallPercentText" Text="0%" Foreground="#2ECC71" FontSize="14" HorizontalAlignment="Right"/>
            </Grid>
            <ProgressBar x:Name="OverallProgressBar" Style="{StaticResource ModernProgressBar}" Value="0" Maximum="100"/>
        </StackPanel>
        
        <!-- Mod List -->
        <Border Grid.Row="2" Background="#252525" CornerRadius="8" Padding="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ModsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12,10" Margin="2" CornerRadius="4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                <Setter Property="Background" Value="#333333"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                <Setter Property="Background" Value="#1E4620"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                <Setter Property="Background" Value="#4A1E1E"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Skipped">
                                                <Setter Property="Background" Value="#3A3A20"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="0" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="○"/>
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                        <Setter Property="Text" Value="◐"/>
                                                        <Setter Property="Foreground" Value="#2ECC71"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Text" Value="✓"/>
                                                        <Setter Property="Foreground" Value="#2ECC71"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="✗"/>
                                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Skipped">
                                                        <Setter Property="Text" Value="→"/>
                                                        <Setter Property="Foreground" Value="#F1C40F"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Mod Name -->
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="#E0E0E0" FontSize="13" 
                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="2" FontSize="12" VerticalAlignment="Center" Margin="8,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Pending"/>
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                        <Setter Property="Text" Value="{Binding ProgressText}"/>
                                                        <Setter Property="Foreground" Value="#2ECC71"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Text" Value="Installed"/>
                                                        <Setter Property="Foreground" Value="#2ECC71"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="{Binding Error}"/>
                                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Skipped">
                                                        <Setter Property="Text" Value="Up to date"/>
                                                        <Setter Property="Foreground" Value="#F1C40F"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Current Operation -->
        <StackPanel Grid.Row="3" Margin="0,16,0,0" Visibility="{Binding IsInstalling, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock x:Name="CurrentOperationText" Text="Downloading..." Foreground="#888888" FontSize="12" Margin="0,0,0,6"/>
            <ProgressBar x:Name="CurrentProgressBar" Style="{StaticResource ModernProgressBar}" Value="0" Maximum="100"/>
        </StackPanel>
        
        <!-- Buttons -->
        <Grid Grid.Row="4" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="CancelButton" Grid.Column="1" Content="Cancel" Style="{StaticResource SecondaryButton}" 
                    Width="100" Click="CancelButton_Click" Margin="0,0,12,0"/>
            <Button x:Name="InstallButton" Grid.Column="2" Content="Install" Style="{StaticResource ModernButton}" 
                    Width="120" Click="InstallButton_Click"/>
        </Grid>
    </Grid>
</Window>
